{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "axios": true,
        "fail": false
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-useless-escape": "warn",
        "indent": ["error", 2]
    }
}
