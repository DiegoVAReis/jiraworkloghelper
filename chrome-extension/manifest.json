{
  "manifest_version": 3,
  "name": "Jira Worklog Helper",
  "version": "2.0.2",
  "author": "Diego Reis",
  "description": "This extension allows the user to log the work into Jira easily.",
  "homepage_url": "https://github.com/DiegoVAReis/jiraworkloghelper",
  "icons": {
    "128": "img/icon-work-log-128x128.png", 
    "256": "img/icon-work-log-256x256.png",
    "512": "img/icon-work-log-512x512.png"
  },
  "options_page": "options.html",
  "action": {
    "default_icon": "img/icon-work-log-512x512.png",
    "default_popup": "temp-popup.html",
    "default_title": "Jira Worklog Helper"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.atlassian.net/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
